<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_kanban_status" model="ir.ui.view">
        <field name="name">kanban.view.status</field>
        <field name="model">data.mesin.produksi</field>
        <field name="arch" type="xml">
            <kanban default_group_by="line_id"  class="o_kanban_small_column" quick_create="false"  on_create="quick_create" create="0">
                <field name="line_id"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)}">
                            <div class="o_dropdown_kanban dropdown">
                                <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-h"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit...</a></t>
                                    <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            <div class="oe_kanban_content">
                                <div>
                                    <!-- <button class="btn btn-secondary" name="openpopup" type="object"> -->
                                        <strong><field name="nomor_mesin"/></strong>
                                    <!-- </button> -->
                                </div>
                                <div class="text-muted">
                                    <strong><field name="kodekain"/></strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record id="data_mesin_produksi_form" model="ir.ui.view">
        <field name="name">data_mesin_produksi_form.form</field>
        <field name="model">data.mesin.produksi</field>
        <field name="arch" type="xml">
            <form string="Mesin Header">
                <header>
                    <button name="action_draft" string="Kosong" type="object" class="btn btn-outline-dark"/>
                    <button name="action_start" string="Naik Beam" type="object" class="btn btn-outline-primary"/>
                    <button name="action_progress" string="Mesin Jalan" type="object" class="btn btn-outline-warning"/>
                    <button name="action_done" string="Turun Beam" type="object" class="btn btn-outline-success"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,start,progress,done" statusbar_colors='{"done": "blue","close": "red"}' />
                </header>
                <sheet>
                    <group name="main_grp_1" colspan="2">
                    <group>
                        <field name="nomor_mesin"/>
                        <field name="mesin"/>
                        <field name="kodekain"/>
                        <field name="rpm"/>
                    </group>
                    <group>
                        <field name="line_id"/>
                        <field name="blok_id"/>
                        <field name="divisi_id"/>
                    </group>
                    </group>
                </sheet> 
            </form>
        </field>
    </record>

    <record id="action_model_kanban" model="ir.actions.act_window">
        <field name="name">Layout Shuttle</field>
        <field name="res_model">data.mesin.produksi</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_kanban_status"/>
        <field name="context">{'group_by': ['line_id']}</field>
    </record>

    <template id="template_qc_assets_backend" name="dashboard assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/qc_shuttle/static/src/css/dashboard.css"/>
        </xpath>
    </template>
</odoo>
